<div class="row">
  <div class="span3" id="home_logo">
    <%= image_tag "bluehead.gif", :title => "BlueHead Logo" %>
  </div>
  <div class="span8">
    <div id="myCarousel" class="carousel slide hidden-phone">
      <div class="carousel-inner">
        <div class="item active">
          <%= link_to image_tag("bookshop_hero.jpg", :title => "Bookshop Promo", :class => "hero"), :controller => "/products/bookshop" %>
        </div>
        <div class="item">
          <%= link_to image_tag("all_rights.png", :title => "Services Promo", :class => "hero"), :controller => "/services" %>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
  </div>
</div>
